<div>
    <% @categories.all.each do |category| %>
        <div class="category">
            <h3>
                <%= link_to category_path(category.id) do %>
                    <%= category.name %>
                <% end %> 
            </h3>
            
            <div class="category-container">
            <% category.dishes[-5..-1].each do |dish|%>
                <div>
                    <%= link_to dish_path(dish.id) do %>
                        <%= image_tag dish.image, class: "category_thumbnail" %>
                        <h5><%= dish.name %></h5>
                    <% end %> 
                </div> 
            <% end %> 
            </div> 
        </div> 
        

    <% end %>

</div>

