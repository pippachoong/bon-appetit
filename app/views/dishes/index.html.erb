<div class= "dishes-container">
    <% @dishes.each do |dish| %>
            <div >
                <%= link_to dish_path(dish.id) do %>
                    <%= cl_image_tag dish.image, class: "dish-show-thumbnail" %>
                <h5><%= dish.name %><h5>
                <br>
                <% end %>
            </div>
    <% end %>
</div>




