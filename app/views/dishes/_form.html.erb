

<%= form_with model: @dish, local:true do |f| %>

    <!--Becausese categories are not within the dish model, run loop like this-->
    Select the relevant categories: 
    <br>
    <% Category.all.each do |cat| %>
        <%= check_box_tag 'category_ids[]', cat.id %>
        <!--check_cox_tag without 'f.' in front as it's not from dish model-->
        <!--tells code to provide ids in array within a param, this can take many categories-->
        <%= cat.name %>
        <br>
    <% end  %>

    <br>

    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
    <br><br>

    <%= f.label :remark %>
    <br>
    <%= f.text_field :remark, placeholder: 'e.g. What inspired your dish?' %>
    <br><br>

    <%= f.label :servings %>
    <br>
    <%= f.number_field :servings, in: 1..10 %>
    <br><br>

    <%= f.label :cooking_time %>
    <br>
    <%= f.text_field :cooking_time, placeholder: 'e.g. 1 hour 15 mins' %>
    <br><br>

    <%= f.label :ingredients %>
    <br>
    <%= f.text_area :ingredients, placeholder: 'list each item and enter!' %>
    <br><br>

    <%= f.label :methods %>
    <br>
    <%= f.text_area :methods,  placeholder: 'list each step and enter!' %>
    <br><br>


    <%= f.label :image, 'Image URL' ,placeholder: 'Insert URL here' %>
    <br>
    <%= f.file_field :image %>
    <br><br>

    

    <br>
    <br>

    <%= f.submit 'submit', class:'button' %>


<% end %>