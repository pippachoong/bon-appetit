



<h3><%=@user.name%></h3>

<%= image_tag @user.image, alt: @user.name, class:'user-image' %>
<br>
<br>

<!--just checking this current user matches this user profile show page to prevent editing! -->
<% if @current_user.present? && @current_user.id == @user.id %>
    
<%= link_to 'Edit User Profile', edit_user_path(@user.id) %>
<br>
<%= link_to 'Delete User Profile', user_path(@user.id), method: 'delete' %>
<% end %>
<br>

    <h5> Recipes shared </h5>
<div class="user-recipes">
        <% @user.dishes.all.each do |dish| %>
                <div >
                    <%= link_to dish_path(dish.id) do %>
                        <%= cl_image_tag dish.image, class: "user-dish-thumbnail" %>
                    <br>
                    <% end %>
                    <p><%= dish.name %><p>
                </div>
        <% end %>
</div>



