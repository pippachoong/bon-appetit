

<%= form_with model: @user, local: true do |f| %>
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
    <br><br>

    <%= f.label :email, 'Email Address'%>
    <br>
    <%= f.text_field :email %>
    <br><br>

    <%= f.label :image %>
    <br>
    <%= f.text_field :image, placeholder: 'URL here' %>
    <br><br>

<%= f.submit %>

<% end %>

